POST http://localhost:4000/users/register HTTP/1.1
Content-Type: application/json

{
  "name": "Sasha",
  "email": "feliugin12@mail.net",
  "password": "123456",
  "gender": "мужской",
  "location": "звёздная",
  "role": "пользователь",
  "backgroundImage": "image.png",
  "trainingLevel": "любитель",
  "workoutTypes": ["стрейчинг", "аэробика"],
